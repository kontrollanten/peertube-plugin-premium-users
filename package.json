{
  "name": "peertube-plugin-premium-users",
  "description": "PeerTube plugin premium user",
  "version": "1.6.2",
  "author": "kontrollanten",
  "bugs": "https://framagit.org/kontrollanten/peertube-plugin-premium-user/issues",
  "clientScripts": [
    {
      "script": "dist/client/my-account/index.js",
      "scopes": [
        "my-account"
      ]
    },
    {
      "script": "dist/client/common.js",
      "scopes": [
        "common"
      ]
    },
    {
      "script": "dist/client/video-edit.js",
      "scopes": [
        "video-edit"
      ]
    }
  ],
  "css": [
    "dist/assets/style.css"
  ],
  "engine": {
    "peertube": ">=6.0.0"
  },
  "homepage": "https://framagit.org/kontrollanten/peertube-plugin-premium-user",
  "keywords": [
    "peertube",
    "plugin"
  ],
  "library": "./dist/server/server/main.js",
  "scripts": {
    "clean": "rm -rf dist/*",
    "prepare": "npm run build",
    "build:client": "node ./scripts/build.cjs",
    "build:server": "tsc --build server/tsconfig.json",
    "build:styles": "npx sass --no-source-map assets:dist/assets",
    "build": "npm-run-all -s clean check:client:tsc -p build:server build:client build:styles",
    "check:client:tsc": "npx tsc --p client/tsconfig.json --noEmit",
    "lint:script": "npx eslint .",
    "lint:styles": "stylelint 'assets/**/*.scss'",
    "test": "npm-run-all -p lint:script lint:styles test:unit",
    "test:unit": "mocha --require ts-node/register server/*.spec.ts"
  },
  "staticDirs": {
    "images": "public/images"
  },
  "translations": {
    "sv-SE": "./languages/sv.json"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.0.0",
    "@types/mocha": "^10.0.8",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.12.0",
    "eslint-config-love": "^87.0.0",
    "globals": "^15.3.0",
    "mocha": "^10.7.3",
    "npm-run-all": "^4.1.5",
    "stylelint": "^16.6.1",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@peertube/peertube-types": "^6.3.0",
    "@types/gtag.js": "^0.0.20",
    "@types/sequelize": "^4.28.20",
    "express": "^4.19.2",
    "short-uuid": "^5.2.0",
    "stripe": "^17.2.0"
  }
}
