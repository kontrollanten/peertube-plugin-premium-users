{
  "name": "peertube-plugin-premium-users",
  "description": "PeerTube plugin premium user",
  "version": "0.0.8",
  "author": "kontrollanten",
  "bugs": "https://framagit.org/kontrollanten/peertube-plugin-premium-user/issues",
  "clientScripts": [
    {
      "script": "dist/client/my-account.js",
      "scopes": [
        "my-account"
      ]
    },
    {
      "script": "dist/client/common.js",
      "scopes": [
        "common"
      ]
    },
    {
      "script": "dist/client/video-edit.js",
      "scopes": [
        "video-edit"
      ]
    }
  ],
  "css": [
    "dist/assets/style.css"
  ],
  "engine": {
    "peertube": ">=6.0.0"
  },
  "homepage": "https://framagit.org/kontrollanten/peertube-plugin-premium-user",
  "keywords": [
    "peertube",
    "plugin"
  ],
  "library": "./dist/server/server/main.js",
  "scripts": {
    "clean": "rm -rf dist/*",
    "prepare": "npm run build",
    "build:client": "node ./scripts/build.cjs",
    "build:server": "tsc --build server/tsconfig.json",
    "build:styles": "npx sass --no-source-map assets:dist/assets",
    "build": "npm-run-all -s clean check:client:tsc -p build:server build:client build:styles",
    "check:client:tsc": "npx tsc --p client/tsconfig.json --noEmit",
    "lint:script": "npx eslint --ext .ts --ext .js .",
    "lint:styles": "stylelint 'assets/**/*.scss'",
    "test": "npm-run-all -p lint:script lint:styles"
  },
  "staticDirs": {
    "images": "public/images"
  },
  "translations": {
    "sv-SE": "./languages/sv.json"
  },
  "devDependencies": {
    "@peertube/peertube-types": "^4.2.2",
    "@tsconfig/node16": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "esbuild": "^0.14.36",
    "eslint": "^8.21.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^14.11.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@types/sequelize": "^4.28.20",
    "express": "^4.19.2",
    "short-uuid": "^4.2.2",
    "stripe": "^14.22.0"
  }
}
